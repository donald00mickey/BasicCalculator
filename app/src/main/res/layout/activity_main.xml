<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="right|center"
        android:layout_weight="1"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="40pt"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/buMult"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="OperatorEvent"
                android:text="*"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"></Button>

            <Button
                android:id="@+id/buPlus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="OperatorEvent"
                android:text="+"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"></Button>
            <Button
                android:id="@+id/buMinus"
                android:text="-"
                android:onClick="OperatorEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                ></Button>
            <Button
                android:id="@+id/buAc"
                android:text="AC"
                android:onClick="AcEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                tools:ignore="OnClick">
            </Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/buSeven"
                android:text="7"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                ></Button>
            <Button
                android:id="@+id/buEight"
                android:text="8"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                ></Button>
            <Button
                android:id="@+id/buNine"
                android:text="9"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                ></Button>
            <Button
                android:id="@+id/buDivide"
                android:text="/"
                android:onClick="OperatorEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                >
            </Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/buFour"
                android:text="4"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                ></Button>
            <Button
                android:id="@+id/buFive"
                android:text="5"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                ></Button>
            <Button
                android:id="@+id/buSix"
                android:text="6"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                ></Button>
            <Button
                android:id="@+id/buPercent"
                android:text="%"
                android:onClick="PercentEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                >
            </Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/buOne"
                android:text="1"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                ></Button>
            <Button
                android:id="@+id/buTwo"
                android:text="2"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                ></Button>
            <Button
                android:id="@+id/buThree"
                android:text="3"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                ></Button>
            <Button
                android:id="@+id/buSquare"
                android:text="^"
                android:onClick="squareEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                >
            </Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/buZero"
                android:text="0"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="31pt"
                android:layout_weight="4"
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"
                ></Button>

            <Button
                android:id="@+id/buDot"
                android:layout_width="31pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:shadowColor="#000000"
                android:text="."
                android:textColor="#000000"
                app:backgroundTint="#FFFFFF"></Button>
            <Button
                android:id="@+id/buEqual"
                android:text="="
                android:onClick="equalsEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                app:backgroundTint="#000000"
                ></Button>
        </TableRow>


    </TableLayout>

</LinearLayout>